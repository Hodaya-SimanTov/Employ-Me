<!DOCTYPE html>
<html lang="en" >
    <head>
        <meta charset="UTF-8">
        <title>History-Employments</title>
        <link rel="stylesheet" href="#">
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    </head>
    <body>
        <a href="/employer/homePage/<%=emailEmployer%>">
            <img class="logo" src="/css/images/logo.PNG" >
            <style>
                .logo{
                    float:left;
                    margin-top: 0;
                    margin-left:5px;
                }
            </style>
        </a>
        <div class="container">
            <div class="row col-md-6 col-md-offset-2 custyle">
                <div class="page-header">
                    <h3><small class="pull-right"><%= hEmployment.length %></small> Employments History </h3>
                </div>
            <table class="table table-striped custab">
            <thead>
                <tr>
                    <th>Occupation Area</th>
                    <th>Contractor Email</th>
                    <th> Date </th>
                    <th>Job Scope</th>
                    <th>Hourly wage</th>
                    <th>Rate</th>
                    <th class="text-center"> </th>
                </tr>
            </thead>
                <%
                if(hEmployment.length!=0) {
                var i=1;
                hEmployment.forEach(function(worker){
                %>
                <tr>
                    <td><%= worker.occupationArea %></td>
                    <td><%= worker.constructorEmail %></td>
                    <td><%= worker.date.toDateString() %></td>
                    <td><%= worker.jobScope %></td>
                    <td><%= worker.hourlyWage %></td>
                    <td><%= worker.rating %></td>
                    <!-- <td class="text-center"><a class='btn btn-info btn-xs' href="#"><span class="glyphicon glyphicon-edit"></span> Confirm </a></td> -->
                </tr>
                <% i++;}) %>
                    <% } else{ %>
                        <h2>Sorry, history employments not exist </h2> 
                    <% } %>
            </table>
            </div>
        </div>
    </body>
</html>