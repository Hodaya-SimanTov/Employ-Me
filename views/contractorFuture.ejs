<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="UTF-8">
        <title>Future shifts</title>
        <link rel="stylesheet" href="/css/styleContractorHistory.css">
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
         <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    </head>
    <style>
        .text-center-e{
            display: true;
        }
    </style>
    <body>
        <div class="container">
            <div class="row col-md-6 col-md-offset-2 custyle">
                <div class="page-header">
                    <div class="title"><h2><small class="pull-right"></small> Future shifts </h2></div>
                </div>
            <table class="table table-striped custab">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Employer Email</th>
                    <th>status</th>
                    <th class="text-center"> </th>
                </tr>
            </thead>
                <%
                if(result.length!=0) {
                    var i=1;
                    var d=new Date();
                result.forEach(function(employement){
                %>
                <tr>
                    <td><%= employement.date.getDate() %>.<%= employement.date.getMonth()+1 %>.<%= employement.date.getFullYear() %></td>
                    <td><%= employement.employerEmail %></td>
                    <td><%= employement.status %></td>
                    <%if(employement.date.getDate()==d.getDate() && employement.start == "no")  {%>
                        <td class="text-center"><a class='btn btn-info btn-xs' id="start" href="/contractorWorker/startEmployement/<%=employement._id%>" ><span class="glyphicon glyphicon-edit" ></span> כניסה </a></td>
                    <%}%> 
                    <%if(employement.date.getDate()==d.getDate() && employement.start == "yes")  {%>
                        <td class="text-center-e"><a class='btn btn-info btn-xs' id="end"  href="/contractorWorker/endEmployement/<%=employement._id%>" ><span class="glyphicon glyphicon-edit"></span> יציאה </a></td>
                    <%}%>                       
                </tr>
                <% i++;}) %>
                    <% } else{ %>
                        <div class="h3"><h3>No shifts found ..</h3> </div>
                    <% } %>
            </table>
            </div>
        </div>
    </body>
    <script >
        
    </script>
</html>