<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Messages</title>
    <link rel="stylesheet" type="text/css" href="/css/styleCompanyMessage.css"/>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://kit.fontawesome.com/10e7a38072.js" crossorigin="anonymous"></script>

</head>
<body>
<nav class="navbar">
  <a href="/companyWorker/homePage/<%=mail%>">
    <img class="logo" src="/css/images/logo.PNG">
  </a>
  <ul>
    <li><a href="/companyWorker/editProfile/<%=mail%>"><i class="fa fa-fw fa-home"></i>My Profile</a> </li>
    <li><a href="/companyWorker/allEmployer/<%=mail%>"><i class="fa fa-fw fa-search"></i>Employers</a> </li>
    <li><a href="/companyWorker/allCompany/<%=mail%>"><i class="fa fa-fw fa-search"></i>Contractor Workers</a> </li>
    <li><a href="/companyWorker/info/<%=mail%>"><i class="fa fa-fw fa-pie-chart"></i>Statistics</a> </li>
    <li><a href="/contractorWorker/sendMessageDiplay/<%=mail%>"><i class="fa fa-fw fa-envelope"></i>Messages</a> </li>
    <li><a href="/companyWorker/companyMessageList/<%=mail%>"><i class="fa fa-fw fa-envelope"></i>System Messages</a> </li>



    <li><a href="/"><i class="fa fa-fw fa-sign-out"></i>Log Out</a> </li>
  </ul>
</nav>
  <div class="container">
    <div class="title">Messages</div>
    <br />
    <form  id="form" name="form" action="/contractorWorker/sendMessage/<%=mail%>" method="POST">
        
  <div >
    <div> <span class="details">Write a message to the employee</span></div>
    <br>
    <div  class="input-box"  >
    <span class="details">Select an employee</span>
    <select id="contractor" name="contractor" class="select" >
    <%
    if(result.length!=0) {
        var i=1;
        var d=new Date();
    result.forEach(function(contractor){
    %>
    <option ><%=contractor.firstName%> <%=contractor.lastName%> - <%=contractor.mail%></option>
    <% i++;}) %>
    <% } else{ %>
        <div class="h3"><h3>No contractor found ..</h3> </div>
    <% } %>
     </select>
    </div>
    <div   >
      <span class="details">Message type</span>
      <select id="type" name="type" class="select" >
        <option value="EmptyShift">No shift reported</option>
        <option value="ErrorReported">Error reporting shift</option>
        <option value="Outstanding">Outstanding this month</option>
        <option value="Other">Other</option>
      </select>
    </div>
    <div  >
        <span class="details">Text</span>
      <br>
        <textarea id="text" rows = "5" cols = "60" name = "text"></textarea>
      </div>
  <div>
    
    </div>
  </div>
    <div class="button">
      <input  value="Send" form="form" onclick="message()"  readonly>
    </div>


  </form>

</div>
</body>
<script >
    function message(){  
        document.getElementById("form").submit();     
    }
  </script>
</html>