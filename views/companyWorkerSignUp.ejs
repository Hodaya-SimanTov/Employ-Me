<html>
<haed>
    <title>
        Sign Up
    </title>
    <link rel="stylesheet" href="/css/styleCompanyWorkerSignUp.css"/>
</haed>
<body>
<div class="model">
    <div class="container">
        <form class="cw sign up" action="/companyWorker/addCompanyWorker" method="POST" id="addCompanyWorker" >
            <div class="imgcontainer">
                <img src="/css/images/user_img.png" class="avatar" />
            </div>
            <div class="container">
                <h1>Sign up</h1>
                <hr>
                <p>Personal Information:</p>
                <lable>Fisrt Name</lable>
                <input type="text" id="firstName" placeholder="Name" name="firstName" required/>
                <br />
                <lable>Last Name</lable>
                <input type="text" id="lastName" placeholder="LastName" name="lastName" required/>
                <br />
                <label>Email</label>
                <input type="email" id="mail" placeholder="Name@example.com" name="mail" required/>
                <br />
                <label>Phone</label>
                <input type="phone" id="phone" placeholder="Phone" name="phone" required/>
                <br />
                <p>Account details:</p>
                <lable>Password</lable>
                <input type="password" id="password" placeholder="Password" name=password required/>
                <br />
                <label>Re-Password</label>
                <input type='password' id='rePassword' placeholder="Re-password"  required/>
                <button type='submit' class='registerbtn btn-outline-info' onclick="signup()">Sign Up</button>
            </div>
        </form>
        <div class='login'>
            <p> Alreade have account? <a href="/companyWorker/login"> Login</a></p>
        </div>
    </div>
</body>

<script type='text/javascript'>
    function signup(){
        var name=document.getElementById("firstName").value;
        var pass=document.getElementById("password").value;
        var rePass=document.getElementById("rePassword").value;
        console.log(name);
        if(!/^[a-zA-Z]+$/.test(name))
            alert('Name is invalid');
        else{
            if (pass.length <6)
                alert('Password is invalid,\npassword must contain at least 6 characters');
            else {
                if(rePass==""){
                    alert('Please confirm the password');
                }
                else{
                    if(rePass!=pass){
                        alert("Invalid password verification");
                    }
                }
            }
        }

    }
</script>

</html>